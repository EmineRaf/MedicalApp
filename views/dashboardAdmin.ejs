<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="w-64 bg-blue-900 text-white p-5">
            <h2 class="text-2xl font-bold">Admin Dashboard</h2>
            <ul class="mt-5">
                <li class="py-2 hover:bg-blue-700 p-2 rounded"><a href="#">Dashboard</a></li>
                <li class="py-2 hover:bg-blue-700 p-2 rounded"><a href="#flex-1 p-10">Manage Doctors</a></li>
                <li class="py-2 hover:bg-blue-700 p-2 rounded"><a href="#">Appointments</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-1 p-10">
            <h1 class="text-3xl font-bold">Manage Doctors</h1>

            <!-- Add Doctor Form -->
            <div class="bg-white p-5 mt-5 rounded shadow">
                <h2 class="text-xl font-semibold">Add New Doctor</h2>
                <form id="doctorForm" class="mt-3">
                    <input type="text" id="nom" placeholder="Nom" class="border p-2 w-full mb-2 rounded">
                    <input type="text" id="prenom" placeholder="Prénom" class="border p-2 w-full mb-2 rounded">
                    <input type="email" id="email" placeholder="Email" class="border p-2 w-full mb-2 rounded">
                    <input type="text" id="specialite" placeholder="Spécialité" class="border p-2 w-full mb-2 rounded">
                    <textarea id="description" placeholder="Description" class="border p-2 w-full mb-2 rounded"></textarea>
                    <input type="password" id="password" placeholder="Mot de passe" class="border p-2 w-full mb-2 rounded">
                    <input type="number" id="prix_visite" placeholder="Prix de la visite" class="border p-2 w-full mb-2 rounded">
                    <input type="text" id="localisation" placeholder="Localisation" class="border p-2 w-full mb-2 rounded">
                    <button type="submit" class="bg-blue-600 text-white p-2 rounded w-full">Add Doctor</button>
                </form>
                <p id="successMsg" class="text-green-600 mt-2 hidden">Doctor added successfully!</p>
            </div>
        </div>
    </div>

    <script>
        document.getElementById("doctorForm").addEventListener("submit", function(event) {
            event.preventDefault();
            document.getElementById("successMsg").classList.remove("hidden");
        });
    </script>
</body>
</html>
